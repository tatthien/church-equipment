{
  "name": "church-equipment",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run --cwd packages/api dev\" \"bun run --cwd packages/web dev\"",
    "dev:api": "bun run --cwd packages/api dev",
    "dev:web": "bun run --cwd packages/web dev",
    "build": "bun run --cwd packages/web build",
    "lint": "bun run --cwd packages/web lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}