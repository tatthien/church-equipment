{
  "name": "church-equipment",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run --cwd packages/api dev\" \"bun run --cwd packages/web dev\"",
    "build:web": "bun run --cwd packages/web build",
    "lint": "bun --filter '*' lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.52.0"
  }
}
